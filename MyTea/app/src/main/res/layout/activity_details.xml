<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.my.mytea.activity.DetailsActivity">

    <RelativeLayout
        android:id="@+id/details_rlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#68b61a">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/logo" />
        <ImageView
            android:id="@+id/details_rl_iv_collect"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/collect" />
        <ImageView
            android:id="@+id/details_rl_iv_share"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/details_rl_iv_collect"
            android:layout_centerInParent="true"
            android:src="@mipmap/share"  />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/details_rlayout"
        >


        <RelativeLayout
            android:id="@+id/details_rlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/details_rlayout">

            <TextView
                android:id="@+id/details_rlayout1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:lines="2"
                android:textColor="#504e4e"
                android:textSize="25sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/details_rlayout1_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/details_rlayout1_title"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/details_rlayout1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_rlayout1_keywords"
                android:layout_alignLeft="@id/details_rlayout1_keywords"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:id="@+id/details_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/details_rlayout1_time"
               />
            <TextView
                android:id="@+id/details_rlayout1_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_iv"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/details_rlayout1_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/details_rlayout1_description"
                android:textSize="20sp"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
