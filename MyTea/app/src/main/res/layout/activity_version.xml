<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VersionActivity">
    <RelativeLayout
        android:id="@+id/version_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#68b61a">
        <ImageView
            android:id="@+id/version_rl_iv"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:text="版本信息"
            android:textColor="#fff"
            android:textSize="25sp"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/version_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/version_rl"
        android:layout_marginTop="70dp"
        android:src="@mipmap/logo"/>
    <TextView
        android:id="@+id/version_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_iv"
        android:layout_marginTop="70dp"
        android:text="买买茶 . 查百科"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/version_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_tv1"
        android:layout_marginTop="10dp"
        android:text="android V1.2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/version_tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_tv2"
        android:layout_marginTop="60dp"
        android:text="copyright@2010-2013 MailMailCha.cn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/version_tv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version_tv3"
        android:layout_marginTop="10dp"
        android:text="买买茶 版权所有"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        />
</RelativeLayout>
